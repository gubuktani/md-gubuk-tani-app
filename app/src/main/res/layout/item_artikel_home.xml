<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="180dp"
    android:layout_margin="@dimen/margin_start_end"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="7dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivGambarArtikelHome"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:src="@drawable/null_pict"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tvJudulArtikelHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small"
            android:text="@string/dummy_penyakit"
            android:layout_margin="@dimen/margin_start_end"/>
        <TextView
            android:id="@+id/tvTimeArtikelHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uploaded 2 hours ago"
            android:textSize="10dp"
            android:layout_marginBottom="7dp"
            android:layout_marginHorizontal="7dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>